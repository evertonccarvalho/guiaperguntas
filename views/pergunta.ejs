<%- include ('partials/header.ejs') %>
<body>
    <%- include ('partials/navbar.ejs') %>

    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form method="POST" action="/responder">
            <h3>Responder</h3>
            <label for="Resposta"></label>
            <textarea placeholder="Digite Resposta" class="form-control" name="corpo"></textarea><br>
            <button type="submit" class="btn btn-primary">Responder</button>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => {%>
            <br>
            <div class="card">
                <div class="card-body">
                    <p></p><%= resposta.corpo %><br></p>
                </div>
            </div>
        <% }) %>
    </div>
</body>
    